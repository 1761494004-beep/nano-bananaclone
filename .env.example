# Example environment variables for local development.
# Copy to `.env.local` and fill in values.
KIE_API_KEY=

# Creem (Payments)
# Product IDs come from your Creem dashboard.
CREEM_API_KEY=
CREEM_WEBHOOK_SECRET=
# Use test mode during development (recommended).
CREEM_TEST_MODE=true

# Pricing products (subscriptions)
# These must be Creem *product IDs* (e.g. `prod_abc123`), not prices.
CREEM_PRODUCT_ID_BASIC_MONTHLY=
CREEM_PRODUCT_ID_BASIC_YEARLY=
CREEM_PRODUCT_ID_PRO_MONTHLY=
CREEM_PRODUCT_ID_PRO_YEARLY=
CREEM_PRODUCT_ID_MAX_MONTHLY=
CREEM_PRODUCT_ID_MAX_YEARLY=

# Supabase (Auth + DB)
# Use publishable key (preferred) or anon key (legacy).
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=
# NEXT_PUBLIC_SUPABASE_ANON_KEY=
